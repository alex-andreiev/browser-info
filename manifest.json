{
  "manifest_version": 3,
  "name": "IP & Browser Info",
  "version": "1.0",
  "description": "Shows external IP, IPv6, browser, and OS",
  "permissions": ["tabs", "storage", "system.memory", "management"],
  "host_permissions": ["https://api64.ipify.org/"],
  "background": {
    "service_worker": "src/background.js"
  },
  "action": {
    "default_popup": "src/views/popup.html",
    "default_icon": {
      "16": "src/icons/icon16.png",
      "48": "src/icons/icon48.png",
      "128": "src/icons/icon128.png"
    }
  }
}
